RewriteEngine On
#RewriteCond %{HTTPS} off
#RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [L,R=301]
AddDefaultCharset utf-8

Options -Indexes

ErrorDocument 400 404/404.php
ErrorDocument 401 404/404.php
ErrorDocument 403 404/404.php
ErrorDocument 404 404/404.php
ErrorDocument 405 404/404.php
ErrorDocument 500 500/500.php



RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule .* $0.html
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R,L]


RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule .* $0.php
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R,L]


RewriteRule ^detail/?$ core/page/detail.php [NC,L]
RewriteRule ^contact/?$ core/page/contact.php [NC,L]
RewriteRule ^HodeCode_logo.png/?$ assets/images/HodeCode_logo.png [NC,L]
RewriteRule ^index/?$ index.php [NC,L]
